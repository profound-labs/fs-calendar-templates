\newcommand\reverseMoons{%
  \colorlet{mooncolor}{white}%
  \let\@origFullMoon\@wall@FullMoon%
  \let\@origNewMoon\@wall@NewMoon%
  \let\@origFirstQuarter\@wall@FirstQuarter%
  \let\@origLastQuarter\@wall@LastQuarter%
  %
  \let\@wall@FullMoon\@origNewMoon%
  \let\@wall@NewMoon\@origFullMoon%
  \let\@wall@FirstQuarter\@origLastQuarter%
  \let\@wall@LastQuarter\@origFirstQuarter%
}

\newcommand\restoreMoons{%
  \colorlet{mooncolor}{darkgold}%
  \let\@wall@FullMoon\@origFullMoon%
  \let\@wall@NewMoon\@origNewMoon%
  \let\@wall@FirstQuarter\@origFirstQuarter%
  \let\@wall@LastQuarter\@origLastQuarter%
}

