\renewcommand*{\tikzMonthCalendar@smallLandscape}[1]{%
  \setlength{\@wall@moonRaise}{1pt}%
  \pgfkeys{/Events/\monthName{#1}/marks/.get=\@eventmarks}%
  \calendar (cal#1) [aldebaran, dates=\CalendarYear-#1-01 to \CalendarYear-#1-last] \@eventmarks;%
}

